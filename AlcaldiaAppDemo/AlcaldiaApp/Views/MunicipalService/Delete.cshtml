@model MunicipalServiceModel
@{
    ViewData["Title"] = "Eliminar Servicio";
}

<h1 class="text-center">¿Seguro que Quieres Eliminar este Servicio?</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <dl>
                <dt>@Html.DisplayNameFor(model => model.ServiceName)</dt>
                <dd>@Html.DisplayFor(model => model.ServiceName)</dd>

                <dt>@Html.DisplayNameFor(model => model.Description)</dt>
                <dd>@Html.DisplayFor(model => model.Description)</dd>

                <dt>@Html.DisplayNameFor(model => model.Cost)</dt>
                <dd>@Html.DisplayFor(model => model.Cost)</dd>
            </dl>
            <form asp-action="Delete" class="mt-3">
                <input type="submit" value="Eliminar" class="btn btn-danger" />

                <a asp-action="Index" class="btn btn-primary">Volver al Listado</a>
            </form>
        </div>
    </div>
</div>
