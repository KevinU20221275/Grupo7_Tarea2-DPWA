@model PositionModel
@{
    ViewData["Title"] = "Editar un Cargo";
}

<h1 class="text-center">Editar Cargo</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly"></div>
            <form asp-action="Edit">
                <div class="form-group">
                    <label asp-for="Position" class="label-control">Cargo</label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Description" class="label-control">Descripcion</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Editar" class="btn btn-warning" />

                    <a asp-action="Index" class="btn btn-primary">Volver al Listado</a>
                </div>
            </form>
        </div>
    </div>
</div>
