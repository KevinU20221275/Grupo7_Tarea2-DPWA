@model EmployeeModel
@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h1 class="text-center">¿Seguro que Quieres Eliminar este Empleado?</h1>

<hr />

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <dl>
                <dt>@Html.DisplayNameFor(model => model.LastName)</dt>
                <dd>@Html.DisplayFor(model => model.LastName)</dd>

                <dt>@Html.DisplayNameFor(model => model.PositionName)</dt>
                <dd>@Html.DisplayFor(model => model.PositionName)</dd>

                <dt>@Html.DisplayNameFor(model => model.Salary)</dt>
                <dd>@Html.DisplayFor(model => model.Salary)</dd>
            </dl>
            <form asp-action="Delete" class="mt-3">
                <input type="submit" value="Eliminar" class="btn btn-danger" />

                <a asp-action="Index" class="btn btn-primary">Volver al Listado</a>
            </form>
        </div>
    </div>
